{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "types": []
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts", "./node_modules"],
  "buildOptions": {
    "outDir": "dist/src"
  }
}
